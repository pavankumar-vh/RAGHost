# Production Environment Configuration (Memory Optimized for Render 512MB)
# Copy these to your Render environment variables

# Server Configuration
NODE_ENV=production
PORT=5001

# Memory Optimization Flags
ENABLE_HIGH_MEMORY=false
ENABLE_CLUSTERING=false
ENABLE_COMPRESSION=true
ENABLE_CACHING=false

# MongoDB Atlas Connection
# MONGODB_URI=your_mongodb_uri_here

# Encryption Key
# ENCRYPTION_KEY=your_encryption_key_here

# Firebase Admin SDK Configuration
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_PRIVATE_KEY=your_private_key
# FIREBASE_CLIENT_EMAIL=your_client_email

# CORS Origins
CORS_ORIGINS=https://rag-host.vercel.app,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Redis Configuration (Optional - Disable for 512MB environments)
# REDIS_URL=your_redis_url_here
